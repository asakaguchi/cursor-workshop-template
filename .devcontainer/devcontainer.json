{
  "name": "Product API Development",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "configureZshAsDefaultShell": true,
      "installOhMyZsh": true,
      "upgradePackages": true,
      "username": "vscode",
      "userUid": "automatic",
      "userGid": "automatic"
    },
    "ghcr.io/rocker-org/devcontainer-features/apt-packages:1": {
      "packages": "curl,wget,git,jq,ca-certificates,build-essential,ripgrep"
    },
    "ghcr.io/va-h/devcontainers-features/uv:1": {
      "shellAutocompletion": true
    },
    "ghcr.io/devcontainers/features/node:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/anthropics/devcontainer-features/claude-code:1.0": {},
    "ghcr.io/devcontainers/features/gcloud:1": {}
  },

  "runArgs": [
    "--init",
    "--rm"
  ],

  "hostRequirements": {
    "gpu": "optional"
  },

  "mounts": [
    "source=claude-code-config,target=/home/vscode/.claude,type=volume",
    "source=${localEnv:HOME}/.config/gcloud,target=/home/vscode/.config/gcloud,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.config/gh,target=/home/vscode/.config/gh,type=bind,consistency=cached"
  ],

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "charliermarsh.ruff",
        "DavidAnson.vscode-markdownlint",
        "redhat.vscode-yaml",
        "ms-azuretools.vscode-docker",
        "eamodio.gitlens",
        "tamasfe.even-better-toml",
        "ms-toolsai.jupyter",
        "ms-toolsai.vscode-jupyter-cell-tags"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/home/vscode/.venv/bin/python",
        "python.linting.enabled": false,
        "python.formatting.provider": "none",
        "[python]": {
          "editor.defaultFormatter": "charliermarsh.ruff",
          "editor.formatOnSave": true,
          "editor.codeActionsOnSave": {
            "source.fixAll": "explicit",
            "source.organizeImports": "explicit"
          }
        },
        "ruff.path": [".venv/bin/ruff"],
        "ruff.organizeImports": true,
        "ruff.fixAll": true,
        "python.analysis.typeCheckingMode": "basic",
        "python.analysis.autoImportCompletions": true,
        "markdownlint.config": {
          "MD013": false,
          "MD033": false,
          "MD041": false
        },
        "terminal.integrated.defaultProfile.linux": "zsh",
        "files.watcherExclude": {
          "**/__pycache__/**": true,
          "**/.pytest_cache/**": true,
          "**/.ruff_cache/**": true,
          "**/.venv/**": true,
          "**/venv/**": true
        },
        "editor.rulers": [88],
        "files.trimTrailingWhitespace": true,
        "files.insertFinalNewline": true,
        "editor.formatOnSave": true
      }
    }
  },

  "forwardPorts": [8000],
  "portsAttributes": {
    "8000": {
      "label": "FastAPI",
      "onAutoForward": "notify"
    }
  },

  "postCreateCommand": "uv sync",
  "postStartCommand": [
    "bash", "-c", 
    "uv run pre-commit install && echo '\\n‚úÖ „Éõ„Çπ„Éà„ÅÆË™çË®ºÊÉÖÂ†±„ÇíÂÖ±Êúâ„Åó„Å¶„ÅÑ„Åæ„Åô' && echo 'üîê ÂøÖË¶Å„Å´Âøú„Åò„Å¶‰ª•‰∏ã„ÇíÂÆüË°å„Åó„Å¶„Åè„Å†„Åï„ÅÑ:' && echo 'gcloud auth application-default login --impersonate-service-account=cloud-run-mcp@YOUR_PROJECT_ID.iam.gserviceaccount.com'"
  ],

  "containerEnv": {
    "DISPLAY": "${localEnv:DISPLAY}",
    "PYTHONUNBUFFERED": "1",
    "PYTHONDONTWRITEBYTECODE": "1",
    "UV_CACHE_DIR": "${containerWorkspaceFolder}/.cache/uv",
    "UV_LINK_MODE": "copy",
    "UV_PROJECT_ENVIRONMENT": "/home/vscode/.venv",
    "UV_COMPILE_BYTECODE": "1"
  },

  "remoteUser": "vscode"
}