{
  "name": "Product API Development",
  "dockerComposeFile": "../compose.yml",
  "service": "app",
  "workspaceFolder": "/workspace",
  
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "configureZshAsDefaultShell": true,
      "installOhMyZsh": true,
      "upgradePackages": true,
      "username": "vscode",
      "userUid": "1000",
      "userGid": "1000"
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.12",
      "installTools": false
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    },
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.debugpy",
        "charliermarsh.ruff",
        "DavidAnson.vscode-markdownlint",
        "redhat.vscode-yaml",
        "ms-azuretools.vscode-docker",
        "GitHub.vscode-pull-request-github",
        "eamodio.gitlens",
        "EditorConfig.EditorConfig"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.linting.enabled": false,
        "python.formatting.provider": "none",
        "[python]": {
          "editor.defaultFormatter": "charliermarsh.ruff",
          "editor.formatOnSave": true,
          "editor.codeActionsOnSave": {
            "source.fixAll": "explicit",
            "source.organizeImports": "explicit"
          }
        },
        "ruff.path": ["/usr/local/bin/ruff"],
        "ruff.organizeImports": true,
        "ruff.fixAll": true,
        "python.analysis.typeCheckingMode": "strict",
        "python.analysis.autoImportCompletions": true,
        "python.analysis.diagnosticSeverityOverrides": {
          "reportUnknownParameterType": "none",
          "reportUnknownArgumentType": "none",
          "reportUnknownVariableType": "none",
          "reportUnknownMemberType": "none",
          "reportMissingParameterType": "none"
        },
        "markdownlint.config": {
          "MD013": false,
          "MD033": false,
          "MD041": false
        },
        "terminal.integrated.defaultProfile.linux": "zsh",
        "files.watcherExclude": {
          "**/__pycache__/**": true,
          "**/.pytest_cache/**": true,
          "**/.ruff_cache/**": true,
          "**/.venv/**": true,
          "**/venv/**": true
        },
        "editor.rulers": [88],
        "files.trimTrailingWhitespace": true,
        "files.insertFinalNewline": true,
        "editor.formatOnSave": true
      }
    }
  },

  "forwardPorts": [8000],
  "portsAttributes": {
    "8000": {
      "label": "FastAPI",
      "onAutoForward": "notify"
    }
  },

  "postCreateCommand": "npm install -g markdownlint-cli && uv sync && uv run pre-commit install",
  "postStartCommand": "echo 'ðŸš€ Product API development environment is ready!'",

  "remoteUser": "vscode",

  "mounts": [
    "source=${localWorkspaceFolder}/.cache,target=/home/vscode/.cache,type=bind,consistency=cached"
  ],

  "runArgs": [
    "--init",
    "--network=host"
  ],

  "containerEnv": {
    "UV_CACHE_DIR": "/home/vscode/.cache/uv",
    "UV_SYSTEM_PYTHON": "true"
  }
}